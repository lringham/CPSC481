<!--Code modified from a Stack Overflow post: http://stackoverflow.com/questions/3034741/create-popup-toaster-notifications-in-windows-with-net-->
<Window
    x:Class="ElderlyNetflix.Screens.Notification"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="Notification Popup" Width="225" SizeToContent="Height"
  WindowStyle="None" AllowsTransparency="True" Background="Transparent" Focusable="False" ShowActivated="False">

    <Grid RenderTransformOrigin="0,1" >

        <!-- Notification area -->
        <Border BorderThickness="0" Background="#D8292525" BorderBrush="#D8292525" CornerRadius="5">
            <StackPanel Margin="8">
                <TextBlock TextWrapping="Wrap" Margin="5" Foreground="#FFF0F0F0" FontSize="20">
                    <Bold>Sign Out?</Bold>
                    <LineBreak />
                    Click on your profile icon to sign out of the application.
                </TextBlock>
            </StackPanel>
        </Border>
        
    </Grid>

</Window>
