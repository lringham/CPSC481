<UserControl x:Class="ElderlyNetflix.Screens.LoginPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">

    <Grid Margin="0,-43,0,43">
        <Image Margin="10,0,0,10" Source="/ElderlyNetflix;component/Assets/Images/imagesLKEPHTJG.jpg" Opacity="0.5" Stretch="Fill" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Grid HorizontalAlignment="Left" Height="447" Margin="820,108,0,0" VerticalAlignment="Top" Width="399" Background="Red" Opacity="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="9*"/>
                <ColumnDefinition Width="10*"/>
            </Grid.ColumnDefinitions>
            <Label Content="   Username" HorizontalAlignment="Left" Height="30" Margin="27,95,0,0" VerticalAlignment="Top" Width="104" Background="White"/>
            <Label Content="  Password" HorizontalAlignment="Left" Height="29" Margin="27,166,0,0" VerticalAlignment="Top" Width="104" Background="White"/>
            <TextBox HorizontalAlignment="Left" Height="30" Margin="163,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="211" Grid.ColumnSpan="2"/>
            <TextBox HorizontalAlignment="Left" Height="31" Margin="163,164,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="211" Grid.ColumnSpan="2"/>
            <Button Content="Login" HorizontalAlignment="Left" Margin="21,289,0,115" Width="93" Background="White" Grid.Column="1"/>
            <CheckBox Content="CheckBox" HorizontalAlignment="Left" Height="15" Margin="10,237,0,0" VerticalAlignment="Top" Width="16" RenderTransformOrigin="-1.812,0.333" Grid.Column="1"/>
            <Label Content="Remember My Password" Grid.Column="1" HorizontalAlignment="Right" Height="30" Margin="0,232,39,0" VerticalAlignment="Top" Width="140" />
        </Grid>
        <Grid Height="100" Margin="-10,0,10,10" VerticalAlignment="Bottom">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FF7A0000"/>
                    <GradientStop Color="Black" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="108*"/>
                <ColumnDefinition Width="25*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" Height="70" Margin="0" Width="177" Click="Home_Click" BorderThickness="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button.Background>
                    <ImageBrush ImageSource="/ElderlyNetflix;component/Assets/Images/logo.png" Stretch="Uniform"/>
                </Button.Background>
            </Button>
        </Grid>
        <Image Margin="20,10,1035,550" Source="/ElderlyNetflix;component/Assets/Images/imagesDCX1E6O5.jpg" Stretch="Fill"/>
    </Grid>
</UserControl>